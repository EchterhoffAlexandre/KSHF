<%- include('partials/header') %>
<body class="user-page">
  <%- include('partials/nav') %>
<header>
    <div class="content">
        <p class="title">MAGASIN</p>
    </div>
</header>
<main>
    <div class="list" id="list"></div>
    <div class="pagenumbers" id="pagination"></div>
</main>
<!-- Modal -->
<div class="modal is-hidden" id="modal">
    <div class="modal-content">
      <h2>Modifier l'élément</h2>
      <form id="modal-form">
        <div>
          <label for="email">Email :</label>
          <input type="email" id="email" name="email">
        </div>
        <div>
          <label for="firstname">Prénom :</label>
          <input type="text" id="firstname" name="firstname">
        </div>
        <div>
          <label for="lastname">Nom :</label>
          <input type="text" id="lastname" name="lastname">
        </div>
        <div>
          <label for="level">Niveau :</label>
          <input type="number" id="level" name="level">
        </div>
        <div>
          <label for="wallet">Portefeuille :</label>
          <input type="number" id="wallet" name="wallet">
        </div>
        <div>
          <label for="family">Famille :</label>
          <input type="text" id="family" name="family">
        </div>
        <div>
          <label for="isAdmin">Est admin  :</label>
          <input type="number" id="isAdmin" name="isAdmin">
        </div>
        <div class="modal-buttons">
          <button type="submit" id="submit-button">Modifier</button>
          <button type="button" id="cancel-button">Annuler</button>
        </div>
      </form>
    </div>
  </div>



<%- include('partials/footer') %>
